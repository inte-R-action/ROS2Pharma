# ROS2 Pharmaceutical IV Bag Vision System - Git Attributes
# Configure Git LFS (Large File Storage) for large binary files

# =============================================================================
# Machine Learning Models (use Git LFS)
# =============================================================================

# PyTorch models
*.pth filter=lfs diff=lfs merge=lfs -text
*.pt filter=lfs diff=lfs merge=lfs -text
*.ckpt filter=lfs diff=lfs merge=lfs -text

# TensorFlow models
*.h5 filter=lfs diff=lfs merge=lfs -text
*.pb filter=lfs diff=lfs merge=lfs -text
*.tflite filter=lfs diff=lfs merge=lfs -text

# ONNX models
*.onnx filter=lfs diff=lfs merge=lfs -text

# Other model formats
*.pkl filter=lfs diff=lfs merge=lfs -text
*.joblib filter=lfs diff=lfs merge=lfs -text
*.model filter=lfs diff=lfs merge=lfs -text
*.weights filter=lfs diff=lfs merge=lfs -text

# =============================================================================
# Media Files (use Git LFS)
# =============================================================================

# Images
*.jpg filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text
*.png filter=lfs diff=lfs merge=lfs -text
*.gif filter=lfs diff=lfs merge=lfs -text
*.bmp filter=lfs diff=lfs merge=lfs -text
*.tiff filter=lfs diff=lfs merge=lfs -text
*.tif filter=lfs diff=lfs merge=lfs -text

# Videos
*.mp4 filter=lfs diff=lfs merge=lfs -text
*.avi filter=lfs diff=lfs merge=lfs -text
*.mov filter=lfs diff=lfs merge=lfs -text
*.mkv filter=lfs diff=lfs merge=lfs -text
*.webm filter=lfs diff=lfs merge=lfs -text

# =============================================================================
# Data Files (use Git LFS)
# =============================================================================

# Large datasets
*.csv filter=lfs diff=lfs merge=lfs -text
*.json filter=lfs diff=lfs merge=lfs -text
*.parquet filter=lfs diff=lfs merge=lfs -text
*.hdf5 filter=lfs diff=lfs merge=lfs -text
*.h5 filter=lfs diff=lfs merge=lfs -text

# Compressed files
*.zip filter=lfs diff=lfs merge=lfs -text
*.tar.gz filter=lfs diff=lfs merge=lfs -text
*.7z filter=lfs diff=lfs merge=lfs -text

# =============================================================================
# ROS2 Specific Large Files
# =============================================================================

# ROS bag files
*.bag filter=lfs diff=lfs merge=lfs -text
*.bag2 filter=lfs diff=lfs merge=lfs -text

# Point cloud data
*.pcd filter=lfs diff=lfs merge=lfs -text
*.ply filter=lfs diff=lfs merge=lfs -text

# Mesh files
*.stl filter=lfs diff=lfs merge=lfs -text
*.obj filter=lfs diff=lfs merge=lfs -text
*.dae filter=lfs diff=lfs merge=lfs -text

# =============================================================================
# Documentation Files (handle line endings)
# =============================================================================

# Text files - normalize line endings
*.txt text
*.md text
*.rst text
*.py text
*.cpp text
*.hpp text
*.c text
*.h text
*.xml text
*.yaml text
*.yml text
*.json text
*.js text
*.html text
*.css text

# =============================================================================
# Special Cases
# =============================================================================

# Ensure shell scripts are executable
*.sh text eol=lf
*.bash text eol=lf

# Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Python files
*.py text eol=lf

# ROS2 launch files
*.launch text eol=lf
*.launch.py text eol=lf

# Configuration files
*.cfg text eol=lf
*.conf text eol=lf
*.ini text eol=lf

# =============================================================================
# Binary Files (do not convert line endings)
# =============================================================================

# Libraries
*.so binary
*.dll binary
*.dylib binary
*.a binary
*.lib binary

# Executables
*.exe binary

# Archives
*.tar binary
*.gz binary
*.bz2 binary
*.xz binary

# Images (small ones not in LFS)
*.ico binary
*.svg binary

# Fonts
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
